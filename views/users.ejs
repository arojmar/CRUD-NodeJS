<!DOCTYPE html>
<html>
  <head>
    <title>Listado usuarios</title>
     <!-- Required meta tags -->
     <meta charset="utf-8">
     <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
     <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
     <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.1/css/all.css"
     integrity="sha384-xxzQGERXS00kBmZW/6qxqJPyxW3UR0BPsL4c8ILaIWXva5kFi7TxkIIaMiKtqV1Q"
     crossorigin="anonymous">
     <!-- Bootstrap CSS -->
     <link rel="stylesheet" 
     href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
       crossorigin="anonymous">
     <link rel='stylesheet' href='/stylesheets/style.css' />
     <link rel='stylesheet' href='/stylesheets/media.css' />
  </head>
  <body>
    <main>
      <div class="container">
          <h1 class="text-center">Pagina de usuario</h1>
          <div class="row">
            <div class="col-12 p-0">
              <form action="/users/registered" method="POST">
                <div class="form-row pt-3">
                    <div class="form-group col-12 col-sm-12 col-md-6 col-lg-4">
                    <label for="inputName4">Nombre</label>
                    <input type="text" name="nameUser" class="form-control" id="inputName4">
                    </div>
                    <div class="form-group col-12 col-sm-12 col-md-6 col-lg-4">
                    <label for="inputLastName4">Apellidos</label>
                    <input type="text" name="lastNameUser" class="form-control" id="inputLastName4">
                    </div>
                </div>
                <div class="form-row pb-3">
                  <div class="form-group col-12 col-sm-12 col-md-6 col-lg-4">
                    <label for="inputModel2">Modelo</label>
                    <input type="text" name="modelPhone" class="form-control" id="inputModel2">
                  </div>
                  <div class="form-group col-12 col-sm-12 col-md-6 col-lg-4">
                    <label for="inputColor">Color</label>
                    <select id="inputColor" name="colorPhone" class="form-control" required>
                      <option selected disabled>Elige...</option>
                      <option value="amarillo">Amarillo</option>
                      <option value="rojo">Rojo</option>
                      <option value="azul">Azul</option>
                      <option value="verde">Verde</option>
                      <option value="gris">Gris</option>
                      <option value="blanco">Blanco</option>
                      <option value="marron">Marron</option>
                      <option value="morado">Morado</option>
                    </select>
                  </div>
                </div>
                <button type="submit" class="btn btn-success col-sm-12 col-md-4 col-lg-3 p-2">Registrar</button>
              </form>
            </div>
          </div>
          <div class="row pt-4">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th class="cabecera" scope="col"></>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellidos</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Color</th>
                    </tr>
                </thead>
                <tbody class="registered-tbody">
                    <% result.forEach(function(result){ %>
                    <tr>
                      <td class="opciones d-flex justify-content-around">
                        <div class="borrar col-2 col-sm-2 col-md-2 col-lg-6">
                          <a href="/users/delete/<%= result.user_id %>">
                            <i class="fas fa-trash-alt"></i>
                          </a>
                        </div>
                        <div class="editar col-2 col-sm-2 col-md-2 col-lg-6">
                          <a href="/users/profile/<%= result.user_id %>">
                            <i class="fas fa-edit"></i>
                          </a>
                        </div>
                      </td>
                      <th scope="row">
                        <%= result.user_id %>
                      </th>
                      <td><%= result.name %></td>
                      <td><%= result.last_name %></td>
                      <td><%= result.model %></td>
                      <td><%= result.color %></td>
                    </tr>
                  <% }); %>  
                </tbody>
            </table>
          </div>
          <div class="row p-2 rowCards">
            <div class="col-12 cards w-100">
              <h2 class="text-light text-center py-3">Registros</h2>
              <% result.forEach(function(result){ %>
              <div class="card border-success mb-3 col-12">
                <div class="card-header bg-transparent border-success h2">#: <%= result.user_id %></div>
                <div class="card-body text-dark">
                  <p class="card-text">
                    <ul>
                      <li>Nombre: <strong><%= result.name %></strong></li>
                      <li>Apellidos: <strong><%= result.last_name %></strong></li>
                      <li>Modelo: <strong><%= result.model %></strong></li>
                      <li>Color: <strong><%= result.color %></strong></li>
                    </ul>
                  </p>
                </div>
                <div class="card-footer bg-transparent border-success d-flex justify-content-around">
                  <div class="borrar">
                    <a href="/users/delete/<%= result.user_id %>" class="btn btn-danger">
                      Eliminar
                    </a>
                  </div>
                  <div class="editar">
                    <a href="/users/profile/<%= result.user_id %>" class="btn btn-primary">
                      Modificar
                    </a>
                  </div>
                </div>
              </div>
              <% }); %>
            </div>
          </div>
      </div>
    </main>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
     integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
     crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
     integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
     crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
     integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
     crossorigin="anonymous"></script>
  </body>
</html>
